# Sam's Suit Shop - Production Environment Variables
# Copy to .env and fill in actual values

# === AWS Configuration ===
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=

# === Application ===
NODE_ENV=production
PORT=3000

# === Database ===
# Local SQLite (current setup)
DB_PATH=/data/suit-shop.db

# === Authentication ===
JWT_SECRET=change-me-to-a-secure-random-string-at-least-32-chars-long
JWT_EXPIRE=7d

# === S3 & CloudFront (Image Serving) ===
# These are automatically populated by Terraform during deployment
S3_BUCKET_NAME=
CLOUDFRONT_DOMAIN_NAME=
CLOUDFRONT_DISTRIBUTION_ID=

# === Logging ===
LOG_LEVEL=info
LOG_FORMAT=json

# === CORS ===
CORS_ORIGIN=https://yourdomain.com

# === API Configuration ===
API_RATE_LIMIT_WINDOW_MS=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# === Email (Optional - for future use) ===
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@samsuitshop.com

# === Stripe (Optional - for payments) ===
# STRIPE_PUBLIC_KEY=
# STRIPE_SECRET_KEY=

# === Google Analytics (Optional) ===
# GA_TRACKING_ID=

# === Features (Feature Flags) ===
FEATURE_USER_ACCOUNTS=true
FEATURE_SHOPPING_CART=true
FEATURE_CHECKOUT=false